<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rplidar_s2">

<xacro:macro name="lidar_gazebo_sensor" params="laser_frame laser_topic" > 

    <joint name="lidar_to_payload" type="fixed">
        <parent link="${payload_frame}"/>
        <child link="${laser_frame}"/>
        <origin xyz="0.07 0 0.11" rpy="0 0 3.1415"/>
    </joint>

    <link name="${laser_frame}">
        <visual>
            <origin xyz="0 0 0" rpy="-1.57 0 3.1415"/>
            <geometry>
                <mesh filename="file://$(find rover_description_pkg)/meshes/rplidar_s2.dae"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 -0.05" rpy="0 0 3.1415"/>
            <geometry>
                <cylinder radius="0.05" length="0.15"/>
            </geometry>
        </collision>
    </link>

    <gazebo reference="${laser_frame}">
        <sensor name='gpu_lidar' type='gpu_lidar'>
            <pose>0 0 0 0 0 0</pose>
            <topic>${laser_topic}</topic>
            <ignition_frame_id>rover/lidar_link</ignition_frame_id>
            <update_rate>10</update_rate>
            <lidar>
                <scan>
                <horizontal>
                    <samples>640</samples>
                    <resolution>1</resolution>
                    <min_angle>-3.14159</min_angle>
                    <max_angle>3.14159</max_angle>
                </horizontal>
                <vertical>
                    <samples>1</samples>
                    <resolution>1</resolution>
                    <min_angle>0.0</min_angle>
                    <max_angle>0.0</max_angle>
                </vertical>
                </scan>
                <range>
                <min>0.15</min>
                <max>10.0</max>
                <resolution>0.01</resolution>
                </range>
            </lidar>
            <visualize>true</visualize>
        </sensor>
    </gazebo>

    <gazebo>    
        <plugin filename="libignition-gazebo-sensors-system.so" name="ignition::gazebo::systems::Sensors">
            <render_engine>ogre2</render_engine>
        </plugin>
    </gazebo>
</xacro:macro>
</robot>
